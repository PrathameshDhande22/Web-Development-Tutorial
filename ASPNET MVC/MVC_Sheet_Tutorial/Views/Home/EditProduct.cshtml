                @Html.ValidationMessageFor(model => model.ProductWarrantyYears, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.RadioButtonFor(model => model.UserType, "Admin") Admin
        @Html.RadioButtonFor(model => model.UserType, "Buyer") Buyer
        @Html.RadioButtonFor(model => model.UserType, "Seller") Seller
        @Html.ValidationMessageFor(model=>Model.UserType,"",new { @class="text-danger"})

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>

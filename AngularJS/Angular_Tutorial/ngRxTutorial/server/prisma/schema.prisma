generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Book {
  id            Int      @id @default(autoincrement())
  title         String
  author        String
  isbn          String?
  imgurl        String?  @default("https://images.template.net/453953/6x9-Book-Cover-Template-edit-online.png")
  publishedYear Int?
  createdAt     DateTime @default(now())

  @@index([id, title])
  @@map("books")
}
